## GitLab URL
external_url '{{ gitlab_external_url }}'

## Geo Primary Configuration
geo_primary_role['enable'] = true
geo_secondary_role['enable'] = false

## GitLab Rails
gitlab_rails['db_password'] = '{{ gitlab_db_password }}'

## PostgreSQL configuration
postgresql['shared_preload_libraries'] = '{{ gitlab_postgresql_shared_preload_libraries }}'
postgresql['listen_address'] = '0.0.0.0'
postgresql['md5_auth_cidr_addresses'] = ['0.0.0.0/0']

## Enable database replication
postgresql['sql_replication_user'] = 'gitlab_replicator'
geo_postgresql['enable'] = true

## Geo node name
gitlab_rails['geo_node_name'] = '{{ gitlab_geo_node_name }}'

## Enable Geo tracking database
geo_secondary['db_fdw'] = false
